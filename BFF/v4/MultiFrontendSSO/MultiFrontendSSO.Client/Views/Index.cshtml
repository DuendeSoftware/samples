@using Duende.Bff.DynamicFrontends
@inject IHttpContextAccessor HttpContextAccessor
@inject CurrentFrontendAccessor FrontendAccessor

@{
  var userIsAuthenticated = HttpContextAccessor.HttpContext!.User.Identity!.IsAuthenticated;
  FrontendAccessor.TryGet(out var currentFrontend);

  var sessionId = HttpContextAccessor.HttpContext.User.FindFirst("sid")?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"/>

  <title>Duende MultiFrontend Single Sign Out Sample</title>

  <link rel="icon" type="image/x-icon" href="~/favicon.ico"/>
  <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico"/>

  <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="/lib/bootstrap4-glyphicons/css/bootstrap-glyphicons.min.css"/>
  <link rel="stylesheet" href="/css/site.css"/>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a href="~/" class="navbar-brand">
    <img src="~/duende-logo.svg" class="icon-banner">
    Duende MultiFrontend SSO
  </a>
</nav>

<div class="container body-container">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Session Information</h5>
          <div class="table-responsive">
            <table class="table table-sm">
              <tbody>
                <tr>
                  <td><strong>User is authenticated</strong></td>
                  <td>
                    @if (userIsAuthenticated)
                    {
                      <span class="badge badge-success">Yes</span>
                    }
                    else
                    {
                      <span class="badge badge-secondary">No</span>
                    }
                  </td>
                </tr>
                <tr>
                  <td><strong>Current Frontend</strong></td>
                  <td>@(currentFrontend?.Name ?? "no frontend")</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Frontend 1 Actions</h5>
          <div class="list-group">
            <a href="frontend1/bff/login" class="list-group-item list-group-item-action">
              <span class="glyphicon glyphicon-log-in"></span> Sign In
            </a>
            <a href=@(userIsAuthenticated ? $"frontend1/bff/logout?sid={sessionId}" : "frontend1/bff/logout") class="list-group-item list-group-item-action">
              <span class="glyphicon glyphicon-log-out"></span> Sign Out
            </a>
          </div>
          <div class="mt-3">
            <a href="frontend1" class="btn btn-primary btn-block">
              <span class="glyphicon glyphicon-arrow-right"></span> Go to Frontend 1
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Frontend 2 Actions</h5>
          <div class="list-group">
            <a href="frontend2/bff/login" class="list-group-item list-group-item-action">
              <span class="glyphicon glyphicon-log-in"></span> Sign In
            </a>
            <a href=@(userIsAuthenticated ? $"frontend2/bff/logout?sid={sessionId}" : "frontend2/bff/logout") class="list-group-item list-group-item-action">
              <span class="glyphicon glyphicon-log-out"></span> Sign Out
            </a>
          </div>
          <div class="mt-3">
            <a href="frontend2" class="btn btn-primary btn-block">
              <span class="glyphicon glyphicon-arrow-right"></span> Go to Frontend 2
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
